<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Student Record System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>

    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-warning">
            <a class="navbar-brand" href="#">Students Record</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <button class="btn btn-success" data-toggle="modal" data-target="#addStudentRecord">Add New Student Entry</button>
                    </li>

                </ul>

            </div>
        </nav>


        <div class="container">

            <table class="table table-striped  table-warning">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Age </th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody id="addStudentRecords">
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script>
        var uri = 'api/Students';

        $(document).ready(function () {
            // Gets all time table records
            $.getJSON(uri)
                .done(function (data) {

                    $("#studentTemplate").tmpl(data).appendTo("#addStudentRecords");
                });
        });

        function getaddStudentRecords() {

            $.getJSON(uri)
                .done(function (data) {

                    $("#addStudentRecords").text("");

                    $("#studentTemplate").tmpl(data).appendTo("#addStudentRecords");
                });

        }

        function addStudentRecord() {
            var _name = $('#name').val();
            var _age = $('#age').val();
            var _mobile = $('#mobile').val();
            var _email = $('#email').val();


            var studentRecord = {
                name: _name,
                age: parseInt(_age),
                mobile: _mobile,
                email: _email
            };

            $.ajax({
                type: "POST",
                url: uri,
                data: JSON.stringify(studentRecord),
                contentType: "application/json; charset=utf-8"
            }).done(function (response) {
                $("#result").html("Success");
                getaddStudentRecords();
            }).fail(function (jqXHR, textStatus) {
                $("#result").html("An error occured when adding  the studentRecord.");
            });
        }
        function updatestudentRecord() {
            var student_ID = $('#student_ID').val();
            var _name = $('#_name').val();
            var _age = $('#_age').val();
            var _mobile = $('#_mobile').val();
            var _email = $('#_email').val();



            var studentRecord = {
                student_ID: parseInt(student_ID),
                name: _name,
                age: parseInt(_age),
                mobile: _mobile,
                email: _email
            };

            $.ajax({
                type: "PUT",
                url: uri + "/" + $('#student_ID').val(),
                data: JSON.stringify(studentRecord),
                contentType: "application/json; charset=utf-8"
            }).done(function (response) {
                $("#resultUpdate").html("Success");
                getaddStudentRecords();
            }).fail(function (jqXHR, textStatus) {
                $("#resultUpdate").html("An error occured When updating the studentRecord");
            });;
        }

        function remove(id) {

            var yes = confirm("Are you sure you want to delete this studentRecord ?");

            if (yes) {
                $.ajax({
                    type: "DELETE",
                    url: uri + "/" + id,

                }).done(function (response) {

                    getaddStudentRecords();
                });

            }
        }
        function getstudentRecordForUpdate(id) {

            $.ajax({
                type: "GET",
                url: uri + "/" + id,
                contentType: "application/json"
            }).done(function (response) {

                $('#student_ID').val(response.student_ID);
                $('#_name').val(response.name);
                $('#_age').val(response.age);
                $('#_mobile').val(response.mobile);
                $('#_email').val(response.email);
            });
        }</script>

    <script id="studentTemplate" type="text/x-jquery-tmpl">

        <tr>

            <td> ${name}</td>
            <td>${age}</td>
            <td>${mobile}</td>
            <td>${email}</td>

            <td> <button class="btn btn-primary" onclick="getstudentRecordForUpdate('${student_ID}')" data-toggle="modal" data-target="#updatestudentRecord">Edit Entry</button></td>
            <td> <a href="#" class="btn btn-danger" onclick="remove('${student_ID}')">Remove Entry</a></td>

        </tr>
    </script>



    <div class="modal" tabindex="-1" role="dialog" id="addStudentRecord">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Student entry</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" aria-describedby="NameHelp" placeholder="Enter Name">
                        </div>
                        <div class="form-group">
                            <label for="model">Age</label>
                            <input type="text" class="form-control" id="age" aria-describedby="AgeHelp" placeholder="Enter Age">

                        </div>
                        <div class="form-group">
                            <label for="model">Mobile</label>
                            <input type="text" class="form-control" id="mobile" aria-describedby="mobileHelp" placeholder="Enter Mobile Number">
                        </div>

                        <div class="form-group">
                            <label for="model">e-mail</label>
                            <input type="text" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <div class="form-group" id="result">


                        </div>
                        <button type="button" onclick="addStudentRecord()" class="btn btn-primary">Add</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                </div>
            </div>
        </div>
    </div>




    <div class="modal" tabindex="-1" role="dialog" id="updatestudentRecord">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update student entry</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">

                            <input type="hidden" class="form-control" id="student_ID" aria-describedby="emailHelp">

                        </div>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="_name" aria-describedby="NameHelp" placeholder="Enter Name">
                        </div>
                        <div class="form-group">
                            <label for="model">Age</label>
                            <input type="text" class="form-control" id="_age" aria-describedby="AgeHelp" placeholder="Enter Age">

                        </div>
                        <div class="form-group">
                            <label for="model">Mobile</label>
                            <input type="text" class="form-control" id="_mobile" aria-describedby="mobileHelp" placeholder="Enter Mobile Number">
                        </div>

                        <div class="form-group" id="result">
                            <label for="model">e-mail</label>
                            <input type="text" class="form-control" id="_email" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <div class="form-group" id="resultUpdate">


                        </div>
                        <button type="button" onclick="updatestudentRecord()" class="btn btn-primary">Update Entry</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
